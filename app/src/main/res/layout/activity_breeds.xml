<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.c4q.android_final_dogsapp.BreedsActivity"
    xmlns:card_view="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/welcome_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/PLACEHOLDERTEXT"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <android.support.v7.widget.CardView
        android:id="@+id/terrier_card"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="115dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/welcome_textView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/terrier_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/terrier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="#000000"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/spaniel_card"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="115dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/terrier_card"
        android:layout_alignBottom="@id/terrier_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/spaniel_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/spaniel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/retriever_card"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="115dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/retriever_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/retriever_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/poodle_card"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="115dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/poodle_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/poodle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
